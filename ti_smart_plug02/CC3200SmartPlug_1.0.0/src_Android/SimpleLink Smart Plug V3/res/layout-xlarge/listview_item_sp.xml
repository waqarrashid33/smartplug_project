<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/listview_item_margin"
        android:layout_marginBottom="@dimen/listview_item_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lvi_sp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/TI_COLOR_BLACK" />

        <TextView
            android:id="@+id/lvi_sp_mac_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="@color/TI_COLOR_BLACK" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/listview_item_margin"
	    android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/lvi_sp_cloud_status"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_cloud_online"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lvi_sp_local_status"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_local_online"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>