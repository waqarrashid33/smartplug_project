<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/listview_item_margin"
    android:background="@color/holo_light_background_color"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/drawer_img_left_margin"
        android:layout_marginBottom="@dimen/drawer_img_left_margin"
        android:layout_marginLeft="@dimen/drawer_img_left_margin"
        android:layout_marginStart="@dimen/drawer_img_left_margin"
        android:layout_marginRight="@dimen/drawer_item_left_margin"
        android:layout_marginEnd="@dimen/drawer_item_left_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/ic_menu_info_details" />

    <TextView
        android:id="@+id/drawer_item_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/drawer_item_right_margin"
        android:layout_marginEnd="@dimen/drawer_item_right_margin"
        android:layout_toEndOf="@+id/drawer_item_icon"
        android:layout_toRightOf="@+id/drawer_item_icon"
        android:text="Dummy" />

</RelativeLayout>